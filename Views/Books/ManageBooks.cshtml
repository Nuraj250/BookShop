@model IEnumerable<AdminPanelApp.Models.Book>

<h2>Manage Books</h2>
<div class="row mb-3">
    <div class="col-md-8">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for books..." id="searchInput" onkeyup="searchBooks()">
            <span class="input-group-text">
                <i class="fa fa-search"></i>
            </span>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <a href="@Url.Action("AddBook", "Books")" class="btn btn-primary">Add New Book</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>
                    <img src="@book.ImagePath" alt="@book.Title" width="50" height="50" />
                </td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>@book.Price.ToString("C")</td>
                <td>@book.Quantity</td>
                <td>@book.Status</td>
                <td>
                    <a href="@Url.Action("AddEdit", "Books", new { id = book.Id })" , new { id=book.Id })" class="btn btn-sm btn-warning">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a href="@Url.Action("DeleteBook", "Admin", new { id = book.Id })" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
