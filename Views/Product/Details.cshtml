@{
    Layout = "~/Views/Shared/_UserLayout.cshtml"; // Use the new User Layout
}

@model Product

<div class="container " style="margin-top=100px">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Category</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title" />
        </div>
        <!-- Product Details -->
        <div class="col-md-7">

            <h1>@Model.Title</h1>
            <p>By (author) <strong>@Model.Author</strong></p>
            <h2>Rs: @Model.Price</h2>
            <p>@Model.Description</p>
            <div class="d-flex align-items-center mb-3">
                <input type="number" class="form-control w-25 me-3" value="1" min="1" />
                <button class="btn btn-dark">Add to cart</button>
            </div>
            <div class="d-flex align-items-center mb-3">
                <a href="#" class="me-3"><i class="fa fa-heart"></i> Add to wishlist</a>
                <a href="#"><i class="fa fa-share"></i> Share</a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        @foreach (var feature in Model.Features)
        {
            <div class="col-md-3">
                <div class="card text-center p-3">
                    <i class="fa fa-check-circle fa-2x text-primary mb-2"></i>
                    <p>@feature</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Ensure the entire card is clickable */
    .product-card-link {
        text-decoration: none;
        color: inherit;
    }

        .product-card-link:hover {
            text-decoration: none;
            color: inherit;
        }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
        }

    .card-img-top {
        height: 250px; /* Adjust based on image size */
        object-fit: cover;
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .card-text {
        font-size: 14px;
        margin: 0;
    }

        .card-text strong {
            font-size: 16px;
            color: #333;
        }

        .card-text .text-muted {
            font-size: 12px;
            color: #777;
        }

    .product-actions {
        margin-top: 15px;
    }
</style>

