<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }
        .sidebar {
            width: 250px;
            background: #0d6efd;
            color: white;
            flex-shrink: 0;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 15px;
            display: block;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .sidebar a:hover {
            background: rgba(255, 255, 255, 0.2);
        }
        .content {
            flex-grow: 1;
            padding: 20px;
            background-color: #f8f9fa;
        }
        .header {
            background-color: #ffffff;
            padding: 10px 20px;
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="p-3">Admin Panel</h4>
        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home"></i> Dashboard</a>
        <a href="@Url.Action("ManageBooks", "Admin")"><i class="fa fa-book"></i> Manage Books</a>
        <a href="@Url.Action("ManageUsers", "Admin")"><i class="fa fa-users"></i> Manage Users</a>
        <a href="@Url.Action("Index", "Order")"><i class="fa fa-shopping-cart"></i> Manage Orders</a>
    </div>
    <div class="content">
        <div class="header">
            <h3>@ViewData["Title"]</h3>
            <div>
                <img src="/images/admin-avatar.png" alt="Admin" style="border-radius: 50%; width: 40px; height: 40px;" />
                <span>Admin</span>
            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
