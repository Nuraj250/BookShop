@model IEnumerable<AdminPanelApp.Models.Order>

<h2>Manage Orders</h2>
<div>
<div class="col-md-8">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for orderID..." id="searchInput" >
        <span class="input-group-text">
            <i class="fa fa-search"></i>
        </span>
    </div>
</div>
<div class="col-md-4 text-end">
    <a href=" "class="btn btn-primary">Manage Book</a>
</div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Date</th>
            <th>Total Price</th>
            <th>Payment Status</th>
            <th>Order Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("ViewOrderDetails", "Order", new { id = order.OrderId })">
                        @order.OrderId
                    </a>
                </td>
                <td>@order.CustomerId</td>
                <td>@order.Date.ToShortDateString()</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.PaymentStatus</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a href="@Url.Action("Edit", "Order", new { id = order.OrderId })" class="btn btn-sm btn-warning">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a href="@Url.Action("Delete", "Order", new { id = order.OrderId })" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
