@model IEnumerable<AdminPanelApp.Models.Order>

<h2>Manage Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Date</th>
            <th>Total Price</th>
            <th>Payment Status</th>
            <th>Order Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerId</td>
                <td>@order.Date.ToShortDateString()</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.PaymentStatus</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a href="@Url.Action("Edit", "Order", new { id = order.OrderId })" class="btn btn-sm btn-warning">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a href="@Url.Action("Delete", "Order", new { id = order.OrderId })" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
